{
  "name": "dvc-change-view",
  "displayName": "dvc-change-view",
  "description": "Display changes on dvc tracked files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.4"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dvcFilesContainer",
          "title": "DVC Control",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "dvcFilesContainer": [
        {
          "id": "fileTreeView",
          "name": "Tracked Files",
          "canToggleVisibility": true,
          "collapsed": false
        }
      ]
    },
    "commands": [
      {
        "command": "dvc-change-view.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "fileTreeView.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "when": "view == fileTreeView"
      },
      {
        "command": "tree-view.helloWorld",
        "title": "Hello World"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "fileTreeView.refresh",
          "when": "view == fileTreeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
